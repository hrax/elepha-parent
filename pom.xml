			</dependency>
			<dependency>
				<groupId>org.slf4j</groupId>
				<artifactId>slf4j-api</artifactId>
				<version>${version.slf4j}</version>
			</dependency>
		</dependencies>
	</dependencyManagement>
	<name>elepha.info parent</name>
	<description>Dependency and configuration parent project</description>
	<scm>
		<url>scm:git:git://github.com/hrax/elepha-parent.git</url>
		<developerConnection>scm:git:ssh://git@github.com:hrax/elepha-parent.git</developerConnection>
	</scm>
</project>
